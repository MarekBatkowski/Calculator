<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@style/WhiteOverflowButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/WhiteNavigationArrow</item>
    </style>

    <style name="WhiteOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="WhiteNavigationArrow" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="LightTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/VeryLightGrey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/AccentOverflowButtonStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/AccentNavigationArrow</item>
    </style>

    <style name="AccentOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AccentNavigationArrow" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Base.Theme.AppCompat" >
        <item name="android:colorBackground">@color/DarkGrey</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlackTheme" parent="Base.Theme.AppCompat" >
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>