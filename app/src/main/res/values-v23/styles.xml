<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="LightTheme" parent="Base.Theme.AppCompat.Light">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorPrimary">@android:color/white</item>
    <item name="colorPrimaryDark">@color/VeryLightGrey</item>
    <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DarkTheme" parent="Base.Theme.AppCompat" >
        <item name="android:colorBackground">@color/DarkGrey</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="BlackTheme" parent="Base.Theme.AppCompat" >
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>
</resources>