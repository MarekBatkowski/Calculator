<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/ButtonTransparentPressed" />
            <stroke
                android:width="2dp"
                android:color="@color/Transparent" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="@color/ButtonTransparentPressed" />
            <stroke
                android:width="2dp"
                android:color="@color/Transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/ButtonTransparent" />
            <stroke
                android:width="2dp"
                android:color="@color/Transparent" />
        </shape>
    </item>
</selector>